{% extends ':default:index.html.twig' %}


{% block body %}
    {% block navigation %}
        {{ parent() }}
    {% endblock %}
    <div class="container">
     <h1>
         {{ firstName|capitalize }}'s blogs
     </h1>
     <hr>
    </div>

    <div class="container">

       <div class="row">
         <div class="col-md-8">
          {% for blog in my_blog %}
           <h2>
            {{ blog.title }}
           </h2>

           <h4>
            {{ blog.publishedDate }}
           </h4>
              <img src="../uploads/pics/{{ blog.optionalPhoto }}" height="150" width="250"/>
              <p>
            {{ blog.body | truncate(100,false," ")}}
           </p>
           <a class="btn btn-primary" href="/{{ blog.title }}">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
          {% endfor %}
         </div>
         <!-- Blog Sidebar Widgets Column -->
         <div class="col-md-4">
               {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                   <!-- Logout Well -->
                   <div class="well">
                       <h4>Have something to write?</h4>
                       <a class="link" href="{{ path('blog_new') }}">Create new entry</a>
                       <hr>
                       <h4>Logout</h4>
                       <a class="link" href="{{ path('logout') }}">Logout</a>
                   </div>
               {% else %}
                   <!-- Login Well -->
                   <div class="well">
                       <h4>Register</h4>
                       <a class="link" href="{{ path('user_registration') }}">Register</a>
                       <hr>
                       <h4>Login</h4>
                       <a class="link" href="{{ path('login') }}">Login</a>
                   </div>
               {% endif %}

               <!-- Blog Categories Well -->
               <div class="well">
                   <h4>Blog Categories</h4>
                   <div class="row">
                       <div class="col-lg-6">
                           <ul class="list-unstyled">
                               <li><a href="#">Category Name</a>
                               </li>
                               <li><a href="#">Category Name</a>
                               </li>
                               <li><a href="#">Category Name</a>
                               </li>
                               <li><a href="#">Category Name</a>
                               </li>
                           </ul>
                       </div>
                       <!-- /.col-lg-6 -->
                       <div class="col-lg-6">
                           <ul class="list-unstyled">
                               <li><a href="#">Category Name</a>
                               </li>
                               <li><a href="#">Category Name</a>
                               </li>
                               <li><a href="#">Category Name</a>
                               </li>
                               <li><a href="#">Category Name</a>
                               </li>
                           </ul>
                       </div>
                       <!-- /.col-lg-6 -->
                   </div>
                   <!-- /.row -->
               </div>

               <!-- Blog Search Well -->
               <div class="well">
                   <h4>Blog Search</h4>
                   <div class="input-group">
                       <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                   </div>
                   <!-- /.input-group -->
               </div>

           </div>
       </div>

    </div>
{% endblock %}
