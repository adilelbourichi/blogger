{% extends ':default:index.html.twig' %}

{% block title %}
    Edit Profile
{% endblock %}

{% block body %}
    {% block navigation %}
        {{ parent() }}
    {% endblock %}
    <div class="container">
        <div class="row">
          {% if  app.user.username== user.username %}

            <div class="col-md-8">
                <h1>User edit</h1>

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input type="submit" value="Edit" />
                {{ form_end(edit_form) }}

            </div>
          {% else %}
            <div class="col-md-8">
                You must be logged in as {{ user.username }} to edit this profile!
            </div>
            {% endif %}
            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <!-- Logout Well -->
                    <div class="well">
                        <h4>Have something to write?</h4>
                        <a class="link" href="{{ path('blog_new') }}">Create new entry</a>
                        <hr>
                        <h4>Logout</h4>
                        <a class="link" href="{{ path('logout') }}">Logout</a>
                    </div>
                {% else %}
                    <!-- Login and Register Well -->
                    <div class="well">
                        <h4>Register</h4>
                        <a class="link" href="{{ path('user_registration') }}">Register</a>
                        <hr>
                        <h4>Login</h4>
                        <a class="link" href="{{ path('login') }}">Login</a>
                    </div>

                {% endif %}

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

            </div>
        </div>
    </div>

{% endblock %}
