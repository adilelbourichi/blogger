{% extends ':default:index.html.twig' %}
{% block title %}
    {{ firstName }} {{ lastName }}'s profile
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
{% block navigation %}
    {{ parent() }}
{% endblock %}

<div class="container">

    <div class="row">
        <div class="col-md-8">
            <h1>
                {{ firstName |capitalize}} {{ lastName|capitalize }}
            </h1>
            <hr>
            <div class="row">
                <div class="col-md-4">
                     <img src="../uploads/pics/{{ profilePic }}"/>
                </div>
                {% if  app.user.username is defined and app.user.username== [firstName,lastName]|join %}
                <div class="col-md-2">

                </div>
                <div class="col-md-4">
                    <ul>
                        <a href="#"> Change Profile Picture </a>
                        <br/>
                        <a href="{{ path('edit_profile',{'username': app.user.username}) }}"> Edit profile</a>
                    </ul>
                </div>
                {% endif %}
            </div>
            <hr>
            <a href="/blogs/{{ firstName }}{{ lastName }}"> Blog entries</a>
            <br/>
            <a href="#">Recommended Articles</a>
        </div>
        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <!-- Logout Well -->
                <div class="well">
                    <h4>Have something to write?</h4>
                    <a class="link" href="{{ path('blog_new') }}">Create new entry</a>
                    <hr>
                    <h4>Logout</h4>
                    <a class="link" href="{{ path('logout') }}">Logout</a>
                </div>
            {% else %}
                <!-- Login Well -->
                <div class="well">
                    <h4>Register</h4>
                    <a class="link" href="{{ path('user_registration') }}">Register</a>
                    <hr>
                    <h4>Login</h4>
                    <a class="link" href="{{ path('login') }}">Login</a>
                </div>
            {% endif %}

            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
                <!-- /.row -->
            </div>

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                </div>
                <!-- /.input-group -->
            </div>

        </div>
    </div>
</div>
{% endblock %}